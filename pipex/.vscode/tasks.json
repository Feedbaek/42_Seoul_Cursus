{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 활성 파일 빌드",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}", "redirect.c", "ft_split.c", "ft_strjoin.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
				"-I",
				"../include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ],
    "version": "2.0.0"
}
